<li class="comment">
  <%= gravatar_for comment.user, size: 10 %>
  <span class="user"><%= comment.user.name %></span></br>
  <span class="content"><%= comment.comment %></span></br>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user == comment.user %>
      <%= link_to t("link.edit"), edit_comment_path(comment), "data-toggle" => "modal", remote: true, "data-target" => "#form-modal" %>
      <%= link_to t("link.delete"), comment, method: :delete,
                                       data: {confirm: t("news.sure")} %>
    <% end %>
  </span>
</li>
<div class="modal fade" id="form-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
