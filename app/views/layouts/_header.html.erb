            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "titles.user" %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t("menus.create"), new_admins_user_registration_path %></li>
              <li><%= link_to t("menus.show_list_user"), admins_users_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "menus.books" %>
