              <li><%= link_to t("menus.profile"), current_user %></li>
              <li><%= link_to t("menus.setting"), edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("menus.sign_out"), destroy_user_session_path, method: :delete %>
